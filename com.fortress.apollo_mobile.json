{
    "app-id": "com.fortress.apollo_mobile",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "command": "apollo-mobile",
    "finish-args": [
        "--socket=wayland"
    ],
    "modules": [
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
	    "builddir": true,
	    "config-opts": [
		"-Dglade_catalog=disabled"
	    ],
            "sources" : [
                {
                  "type" : "git",
                  "branch": "libhandy-1-6",
                  "url" : "https://gitlab.gnome.org/GNOME/libhandy.git"
                }
            ]
        },
        {
            "name": "apollo_mobile",
            "buildsystem": "meson",
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
